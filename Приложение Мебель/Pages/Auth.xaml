<Page x:Class="WpfApp3.Pages.Auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp3.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Auth">

    <Grid Background="White">
        <Button x:Name="btnEnter" Content="Войти" HorizontalAlignment="Left" Margin="194,251,0,0" VerticalAlignment="Top" Width="130" Click="btnEnter_Click" FontSize="24"/>
        <Button x:Name="btnRegistry" Content="Зарегистрироваться" HorizontalAlignment="Left" Margin="329,251,0,0" VerticalAlignment="Top" Width="310" Click="btnRegistry_Click" FontSize="24"/>
        <TextBox x:Name="tbLogin" HorizontalAlignment="Left" Margin="299,157,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="340" FontSize="24"/>
        <Label Content="Логин:" HorizontalAlignment="Left" Margin="194,149,0,0" VerticalAlignment="Top" FontSize="24" Width="100"/>
        <Label Content="Пароль:" HorizontalAlignment="Left" Margin="194,196,0,0" VerticalAlignment="Top" FontSize="24" Width="100"/>
        <TextBox x:Name="tbPassword" HorizontalAlignment="Left" Margin="299,204,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="340" FontSize="24"/>

    </Grid>
</Page>
